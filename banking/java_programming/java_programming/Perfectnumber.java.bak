import java.util.Scanner;
class Perfectnumber
{
	 public static void main(String[] args) 
	{
		Scanner scan=new Scanner(System.in);
        System.out.println("enter the number");
		int num=scan.nextInt();
		int sum=0;
		for (int a=1;a<num ;a++ )
		{
			if (num%a==0)
			{
				sum=sum+a;
			}

		}
		if (sum==num)
		{
			System.out.println(num+": is perfectnumber");
		}
		else 
		{
			
		
	}
}
